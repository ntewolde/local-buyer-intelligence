# Local Buyer Intelligence Platform - Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Local Buyer Intelligence Platform
ENVIRONMENT=development
DEBUG=True

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://local_buyer:local_buyer_password@localhost:5432/local_buyer_intelligence

# =============================================================================
# REDIS (Required for Celery background tasks)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY
# =============================================================================
# IMPORTANT: Generate a secure secret key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS (Cross-Origin Resource Sharing)
# =============================================================================
# Comma-separated list of allowed origins (for frontend access)
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Mapbox API Token (for map visualizations)
# Get one at: https://account.mapbox.com/
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# =============================================================================
# API RATE LIMITS
# =============================================================================
API_RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# FEATURE FLAGS (Future Work - Keep disabled for MVP)
# =============================================================================
# These enable future modules that are not part of the MVP
FEATURE_LEAD_FUNNEL_ENABLED=False
FEATURE_PUBLIC_SIGNALS_ENABLED=False
FEATURE_CHANNEL_CRM_ENABLED=False
FEATURE_CAMPAIGNS_ENABLED=False
